// Removendo todos os itens que atendem a uma condição diretamente no $pull

// Remove todos os elementos do array votes que sejam maiores ou iguais a 6 (operador $gte)
use('sales');
db.profiles.updateOne(
  { _id: 1 },
  {
    $pull: {
      votes: { $gte: 6 },
    },
  },
);

use('sales');
db.profiles.find();

// insere o documento
use('sales');
db.profiles.insertOne({ _id: 1, votes: [3, 5, 6, 7, 7, 8] });
